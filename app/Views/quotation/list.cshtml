@{
    ViewData["title"] = "Quotation List | Also Design";
}
@section styles
{
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css">
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0">Quotation List</h4>
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item color-495057">Quotation</li>
                            <li class="breadcrumb-item color-495057">Quotation List</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">Quotations Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-10 ml-1remN">
                                <div class="card ribbon-box shadow-none mb-lg-0">
                                    <div class="card-body">
                                        <div id="dvTotalQuotations" class="ribbon ribbon-success round-shape">Total Quotations: 0</div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-2 text-right pr-0">
                                <button type="button" class="btn btn-success btn-label waves-effect waves-light" onclick="window.location.href='/quotation/add'">
                                    <i class="ri-user-add-fill label-icon align-middle fs-16 me-2"></i> Add Quotation
                                </button>
                            </div>
                        </div>
                        <div class="row pt-27px">
                            <div class="col-12">
                                <table id="tbQuotations" class="table table-bordered dt-responsive nowrap align-middle mdl-data-table" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Code</th>
                                            <th>Client</th>
                                            <th>User Creator</th>
                                            <th>Payment Type</th>
                                            <th>Total</th>
                                            <th>Currency</th>
                                            <th>Status</th>
                                            <th>Creation Date</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="updateStatusModal"  tabindex="-1" aria-labelledby="exampleModalgridLabel" aria-modal="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalgridLabel">Change Status</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="javascript:void(0);">
                    <div class="row g-3">
                        <div class="col-6">
                            <label for="inCurrentStatus" class="form-label">Current Status</label>
                            <input id="inCurrentStatus" type="text" class="form-control text-center color-fff" disabled>
                        </div>
                        <div class="col-6">
                            <label for="seStatus" class="form-label">New Status</label>
                            <select id="seStatus" class="form-select"></select>
                        </div>
                        <div class="col-12">
                            <label for="taComments" class="form-label">Comments</label>
                            <textarea id="taComments" class="form-control fw-medium mb-1 bg-light border-0 uppercase-input" rows="4"></textarea>
                        </div>
                        <div class="col-12">
                            <div class="hstack gap-2 justify-content-end">
                                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary" onclick="updateStatus()">Update</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script src="../assets/js/pages/quotationList.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
}