@model entities.models.loginModel;
@{
    Layout = null;
    ViewData["title"] = "Log In | Also Design";
}

<!doctype html>
<html lang="en" data-layout="vertical" data-layout-style="detached" data-sidebar="light" data-topbar="dark" data-sidebar-size="lg" data-sidebar-image="none">
    <head>
        <meta charset="utf-8" />
        <title>@ViewData["title"]</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta content="Also Design - Machining industry-focused Enterprise Resource Planning (ERP)." name="description"/>
        <meta content="Ideti Company." name="author"/>
        <link rel="shortcut icon" href="../assets/images/favicon.ico">
        <link href="../assets/css/bootstrap.min.css" rel="stylesheet" type="text/css"/>
        <link href="../assets/css/icons.min.css" rel="stylesheet" type="text/css"/>
        <link href="../assets/css/app.min.css" rel="stylesheet" type="text/css"/>
        <link href="../assets/css/login.css" rel="stylesheet" type="text/css"/>
    </head>
    <body>
        <div class="auth-page-wrapper pt-5">
            <div class="auth-one-bg-position auth-one-bg" id="auth-particles">
                <div class="bg-overlay background-black-important"></div>
                <div class="shape">
                    <svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink"
                        viewBox="0 0 1440 120">
                        <path d="M 0,36 C 144,53.6 432,123.2 720,124 C 1008,124.8 1296,56.8 1440,40L1440 140L0 140z"></path>
                    </svg>
                </div>
            </div>
            <div class="auth-page-content">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-8 col-lg-6 col-xl-5">
                            <div class="card mt-4">
                                <div class="card-body p-4">
                                    <div class="text-center mt-2">
                                        <h5 class="text-dark">Welcome Back !</h5>
                                        <p class="text-muted">Log In to continue to Also Design System</p>
                                    </div>
                                    <div class="p-2 mt-4">
                                        <div class="mb-3">
                                            <label asp-for="username" class="form-label"></label>
                                            <input asp-for="username" type="text" class="form-control uppercase-input" placeholder="Enter username" autofocus tabindex="1">
                                        </div>
                                        <div class="mb-3">
                                            <div class="float-end">
                                                @* <a href="@Url.Action("passwordReset", "login")" class="text-muted">Forgot password?</a> *@
                                            </div>
                                            <label asp-for="password" class="form-label"></label>
                                            <div class="position-relative auth-pass-inputgroup mb-3">
                                                <input asp-for="password" type="password" class="form-control pe-5" placeholder="Enter password" tabindex="2">
                                                <button id="password-addon" class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted" type="button">
                                                    <i class="ri-eye-fill align-middle"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <div class="mt-4">
                                            <button id="btnSubmit" type="button" class="btn btn-success w-100 btn-load" tabindex="3">
                                                <span class="d-flex align-items-center">
                                                    <span id="submitText" class="flex-grow-1 me-2">
                                                        Sign In
                                                    </span>
                                                    <span id="submitStatus" class="spinner-border flex-shrink-0 display-none" role="status">
                                                        <span class="visually-hidden">Loading...</span>
                                                    </span>
                                                </span>
                                            </button>
                                        </div>
                                    </div>
                                    <div id="validationsSummary" class="mt-2 text-center display-none">
                                        <div class="signin-other-title">
                                            <h5 class="fs-13 mb-4 title color-red">Validations Summary</h5>
                                        </div>
                                        <div id="itemsSummary" class="color-red"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center">
                            <p class="mb-0 text-muted">
                                &copy;
                                <script>document.write(new Date().getFullYear())</script> Also Design. Design & Developed by Ideti. All Rights Reserved.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <script src="../assets/libs/jquery/jquery-3.7.1.min.js"></script>
        <script src="../assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="../assets/libs/simplebar/simplebar.min.js"></script>
        <script src="../assets/libs/node-waves/waves.min.js"></script>
        <script src="../assets/libs/feather-icons/feather.min.js"></script>
        <script src="../assets/js/pages/plugins/lord-icon-2.1.0.js"></script>
        <script src="../assets/js/plugins.js"></script>
        <script src="../assets/libs/particles.js/particles.js"></script>
        <script src="../assets/js/pages/particles.app.js"></script>
        <script src="../assets/libs/sweetalert2/sweetalert2.all.min.js"></script>
        <script src="../assets/js/pages/login.js"></script>
    </body>
</html>