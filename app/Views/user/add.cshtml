@{
    ViewData["title"] = "Add User | Also Design";
}
@section styles
{
    <link href="../assets/libs/multi.js/multi.min.css" rel="stylesheet"  type="text/css">

    <style>
        .multi-wrapper .selected-wrapper {
            border: none;
        }
        .multi-wrapper .non-selected-wrapper {
            border: none;
        }
    </style>
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0">Add User</h4>
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item color-495057">User</li>
                            <li class="breadcrumb-item color-495057">Add User</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">User Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <label for="inUserEmail" class="form-label">Email</label>
                                <input type="text" class="form-control uppercase-input" id="inUserEmail" placeholder="Enter email">
                            </div>
                            <div class="col-4">
                                <label for="inUsername" class="form-label">Username</label>
                                <input type="text" class="form-control uppercase-input" id="inUsername" placeholder="Enter username">
                            </div>
                            <div class="col-4">
                                <label for="inPassword" class="form-label">Password</label>
                                <input type="password" class="form-control" id="inPassword" placeholder="Enter password">
                            </div>
                        </div>
                        <div class="row pt-27px">
                            <div class="col-4">
                                <label for="inUserFirstname" class="form-label">Firstname</label>
                                <input type="text" class="form-control uppercase-input" id="inUserFirstname" placeholder="Enter firstname">
                            </div>
                            <div class="col-4">
                                <label for="inUserLastname" class="form-label">Last Name</label>
                                <input type="text" class="form-control uppercase-input" id="inUserLastname" placeholder="Enter lastname">
                            </div>
                            <div class="col-4">
                                <label for="seUserStatus" class="form-label">Status</label>
                                <select class="form-select" id="seUserStatus"></select>
                            </div>
                        </div>
                        <div class="row pt-27px">
                            <div class="col-6">
                                <label for="seUserAccess" class="form-label">User Access</label>
                                <form>
                                    <select required multiple="multiple" id="seUserAccess">
                                    </select>
                                </form>
                            </div>
                            <div class="col-6">
                                <label for="seUserRoles" class="form-label">User Role</label>
                                <select class="form-select" id="seUserRoles"></select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">User Contact Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-1">
                                <label for="seEmployeeGender" class="form-label">Gender</label>
                                <select class="form-select" id="seEmployeeGender"></select>
                            </div>
                            <div class="col-5">
                                <label for="inEmployeeAddress" class="form-label">Address</label>
                                <input type="text" class="form-control uppercase-input" id="inEmployeeAddress" placeholder="Enter address">
                            </div>
                            <div class="col-3">
                                <label for="inEmployeeCity" class="form-label">City</label>
                                <input type="text" class="form-control uppercase-input" id="inEmployeeCity" placeholder="Enter city">
                            </div>
                            <div class="col-3">
                                <label for="inEmployeeState" class="form-label">State</label>
                                <input type="text" class="form-control uppercase-input" id="inEmployeeState" placeholder="Enter state">
                            </div>
                        </div>
                        <div class="row pt-27px">
                            <div class="col-2">
                                <label for="inEmployeeZipcode" class="form-label">Zip Code</label>
                                <input type="text" class="form-control uppercase-input" id="inEmployeeZipcode" placeholder="Enter zip code">
                            </div>
                            <div class="col-3">
                                <label for="inEmployeeJobPosition" class="form-label">Job Position</label>
                                <input type="text" class="form-control uppercase-input" id="inEmployeeJobPosition" placeholder="Enter job position">
                            </div>
                            <div class="col-3">
                                <label for="inEmployeeProfession" class="form-label">Profession</label>
                                <input type="text" class="form-control uppercase-input" id="inEmployeeProfession" placeholder="Enter profession (ING, LIC, etc.)">
                            </div>
                            <div class="col-4">
                                <label for="inEmployeeContactPhones" class="form-label">Contact phone</label>
                                <input class="form-control uppercase-input" id="inEmployeeContactPhones" data-choices data-choices-limit="10" data-choices-removeItem type="text"/>
                            </div>
                        </div>
                        <div class="row pt-27px">
                            <div class="col-6">
                                <button type="button" class="btn btn-warning w-100per" onclick="window.location.reload(true)">Refresh</button>
                            </div>
                            <div class="col-6">
                                <button type="button" class="btn btn-success w-100per" onclick="add()">Add</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script>
        $(document).ready(async function() {
            $('#loader').show();
            await loadScript('../assets/js/pages/userAdd.js');
            await initializeCatalogs();
            await loadScript('../assets/libs/multi.js/multi.min.js');
            await loadScript('../assets/js/pages/form-advanced.init.js');
            $('#loader').hide();
        });

        function loadScript(src) {
            return new Promise((resolve, reject) => {
                const script = document.createElement('script');
                script.src = src;
                script.onload = () => resolve(src);
                script.onerror = () => reject(new Error(`Error al cargar el script ${src}`));
                document.head.appendChild(script);
            });
        }
    </script>
}