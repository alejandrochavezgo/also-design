@{
    ViewData["title"] = "Add Client | Also Design";
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0">Add Client</h4>
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item color-495057">Client</li>
                            <li class="breadcrumb-item color-495057">Add Client</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <div class="alert-custom alert-success alert-borderless" role="alert">
                            This module allows administrators to add new clients to the system, providing all the necessary details.
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-3">
                                <label for="inBusinessName" class="form-label">Business Name</label>
                                <input type="text" class="form-control uppercase-input" id="inBusinessName" placeholder="Enter business name">
                            </div>
                            <div class="col-3">
                                <label for="inRfc" class="form-label">RFC</label>
                                <input type="text" class="form-control uppercase-input" id="inRfc" placeholder="Enter rfc">
                            </div>
                            <div class="col-3">
                                <label for="inAddress" class="form-label">Address</label>
                                <input type="text" class="form-control uppercase-input" id="inAddress" placeholder="Enter address">
                            </div>
                            <div class="col-3">
                                <label for="inZipCode" class="form-label">ZIP Code</label>
                                <input type="text" class="form-control uppercase-input" id="inZipCode" placeholder="Enter ZIP code">
                            </div>
                        </div>
                        <div class="row pt-27px">
                            <div class="col-3">
                                <label for="inCity" class="form-label">City</label>
                                <input type="text" class="form-control uppercase-input" id="inCity" placeholder="Enter city">
                            </div>
                            <div class="col-3">
                                <label for="inState" class="form-label">State</label>
                                <input type="text" class="form-control uppercase-input" id="inState" placeholder="Enter state">
                            </div>
                            <div class="col-3">
                                <label for="inCountry" class="form-label">Country</label>
                                <input type="text" class="form-control uppercase-input" id="inCountry" placeholder="Enter country">
                            </div>
                            <div class="col-3">
                                <label class="form-check-label" for="inIsActive">Active</label>
                                <input class="form-check-input d-block mt-18px ml-13px" type="checkbox" id="inIsActive">
                            </div>
                        </div>
                        <div class="row pt-27px">
                            <div class="col-6">
                                <label for="inContactEmails" class="form-label">Contact e-mail</label>
                                <input class="form-control uppercase-input" id="inContactEmails" data-choices data-choices-limit="10" data-choices-removeItem type="text"/>
                            </div>
                            <div class="col-6">
                                <label for="inContactPhones" class="form-label">Contact phone</label>
                                <input class="form-control uppercase-input" id="inContactPhones" data-choices data-choices-limit="10" data-choices-removeItem type="text"/>
                            </div>
                        </div>
                        <div class="row pt-27px">
                            <div class="col-6">
                                <button type="button" class="btn btn-warning w-100per" onclick="reset()">Clear</button>
                            </div>
                            <div class="col-6">
                                <button type="button" class="btn btn-success w-100per" onclick="addClient()">Add</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script src="../assets/js/pages/clientAdd.js"></script>
}