@{
    ViewData["title"] = "Supplier List | Also Design";
}
@section styles
{
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css">
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0">Supplier List</h4>
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item color-495057">Supplier</li>
                            <li class="breadcrumb-item color-495057">Supplier List</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">Suppliers Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-10 ml-1remN">
                                <div class="card ribbon-box shadow-none mb-lg-0">
                                    <div class="card-body">
                                        <div id="dvTotalSuppliers" class="ribbon ribbon-success round-shape">Total Supplier: 0</div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-2 text-right pr-0">
                                <button type="button" class="btn btn-success btn-label waves-effect waves-light" onclick="window.location.href='/supplier/add'">
                                    <i class="ri-user-add-fill label-icon align-middle fs-16 me-2"></i> Add Supplier
                                </button>
                            </div>
                        </div>
                        <div class="row pt-27px">
                            <div class="col-12">
                                <table id="tbSuppliers" class="table table-bordered dt-responsive nowrap align-middle mdl-data-table" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Business Name</th>
                                            <th>RFC</th>
                                            <th>Address</th>
                                            <th>City</th>
                                            <th>State</th>
                                            <th>Contact E-mail</th>
                                            <th>Contact Phone</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td colspan="10" class="text-center">
                                                We have nothing to show.
                                            </td>
                                        </tr>
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>ID</th>
                                            <th>Business Name</th>
                                            <th>RFC</th>
                                            <th>Address</th>
                                            <th>City</th>
                                            <th>State</th>
                                            <th>Contact E-mail</th>
                                            <th>Contact Phone</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script src="../assets/js/pages/supplierList.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
}