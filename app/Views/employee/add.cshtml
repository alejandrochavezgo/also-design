@{
    ViewData["title"] = "Add Employee | Also Design";
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0">Add Employee</h4>
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item color-495057">Employee</li>
                            <li class="breadcrumb-item color-495057">Add Employee</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">Employee Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-3">
                                <label for="inUserEmail" class="form-label">Email</label>
                                <input type="text" class="form-control uppercase-input" id="inUserEmail" placeholder="Enter email">
                            </div>
                            <div class="col-3">
                                <label for="inUserFirstname" class="form-label">Firstname</label>
                                <input type="text" class="form-control uppercase-input" id="inUserFirstname" placeholder="Enter firstname">
                            </div>
                            <div class="col-3">
                                <label for="inUserLastname" class="form-label">Last Name</label>
                                <input type="text" class="form-control uppercase-input" id="inUserLastname" placeholder="Enter lastname">
                            </div>
                            <div class="col-3">
                                <label for="seUserStatus" class="form-label">Status</label>
                                <select class="form-select" id="seUserStatus">
                                    <option value="1">ACTIVE</option>
                                    <option value="2">INACTIVE</option>
                                    <option value="3">LOCKED</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">Employee Contact Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-1">
                                <label for="seEmployeeGender" class="form-label">Gender</label>
                                <select class="form-select" id="seEmployeeGender">
                                    <option value="M">M</option>
                                    <option value="H">H</option>
                                </select>
                            </div>
                            <div class="col-5">
                                <label for="inEmployeeAddress" class="form-label">Address</label>
                                <input type="text" class="form-control uppercase-input" id="inEmployeeAddress" placeholder="Enter address">
                            </div>
                            <div class="col-3">
                                <label for="inEmployeeCity" class="form-label">City</label>
                                <input type="text" class="form-control uppercase-input" id="inEmployeeCity" placeholder="Enter city">
                            </div>
                            <div class="col-3">
                                <label for="inEmployeeState" class="form-label">State</label>
                                <input type="text" class="form-control uppercase-input" id="inEmployeeState" placeholder="Enter state">
                            </div>
                        </div>
                        <div class="row pt-27px">
                            <div class="col-2">
                                <label for="inEmployeeZipcode" class="form-label">Zip Code</label>
                                <input type="text" class="form-control uppercase-input" id="inEmployeeZipcode" placeholder="Enter zip code">
                            </div>
                            <div class="col-3">
                                <label for="inEmployeeJobPosition" class="form-label">Job Position</label>
                                <input type="text" class="form-control uppercase-input" id="inEmployeeJobPosition" placeholder="Enter job position">
                            </div>
                            <div class="col-3">
                                <label for="inEmployeeProfession" class="form-label">Profession</label>
                                <input type="text" class="form-control uppercase-input" id="inEmployeeProfession" placeholder="Enter profession (ING, LIC, etc.)">
                            </div>
                            <div class="col-4">
                                <label for="inEmployeeContactPhones" class="form-label">Contact phone</label>
                                <input class="form-control uppercase-input" id="inEmployeeContactPhones" data-choices data-choices-limit="10" data-choices-removeItem type="text"/>
                            </div>
                        </div>
                        <div class="row pt-27px">
                            <div class="col-6">
                                <button type="button" class="btn btn-warning w-100per" onclick="window.location.reload(true)">Refresh</button>
                            </div>
                            <div class="col-6">
                                <button type="button" class="btn btn-success w-100per" onclick="add()">Add</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script src="../assets/js/pages/employeeAdd.js"></script>
}